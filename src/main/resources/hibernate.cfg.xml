<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">ram</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Test</property>
		<property name="hibernate.connection.username">root</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="hibernate.connection.pool_size">10</property>
		<property name="hibernate.hbm2ddl.auto">update</property> 
		<mapping class="com.javahome.model.StudentBean"></mapping>
		<mapping class="com.javahome.model.AddressBean"></mapping>
		<mapping class="com.javahome.model.UserBean"></mapping>
		<mapping class="com.javahome.model.PhoneNumberBean"></mapping>
		<mapping class="com.javahome.model.VechileBean"></mapping>
		<mapping class="com.javahome.model.GroupBean"></mapping>
		<mapping class="com.javahome.model.UserGroupBean"></mapping>
		
		 
	</session-factory>
</hibernate-configuration>
